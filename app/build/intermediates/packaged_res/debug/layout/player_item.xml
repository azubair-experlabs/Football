<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                        
                            


                 
                             
                                                                     
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginVertical="4dp" android:tag="layout/player_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="binding_1"
                android:layout_weight="0"
                android:layout_marginHorizontal="8dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="50dp"
                android:layout_weight="0"
                android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tag="binding_2"                 
                android:src="@drawable/football"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginHorizontal="8dp"
                android:tag="binding_3"          />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_weight="0"
                android:textColor="@color/primary_blue"
                android:maxLines="1"
                android:layout_marginHorizontal="8dp"
                android:tag="binding_4"                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_weight="0"
                android:textColor="@color/secondary_blue"
                android:maxLines="1"
                android:layout_marginHorizontal="8dp"
                android:tag="binding_5"                 />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
         